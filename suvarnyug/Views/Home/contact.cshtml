                            <img src="~/assetsuser/images/features/feature-author1.jpg" alt="Author">
                            <img src="~/assetsuser/images/features/feature-author2.jpg" alt="Author">
                            <img src="~/assetsuser/images/features/feature-author3.jpg" alt="Author">
                            <img src="~/assetsuser/images/features/feature-author4.jpg" alt="Author">
                            <img src="~/assetsuser/images/features/feature-author5.jpg" alt="Author">
                            <img src="~/assetsuser/images/features/feature-author6.jpg" alt="Author">
