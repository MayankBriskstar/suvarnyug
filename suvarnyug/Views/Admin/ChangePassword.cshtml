@model suvarnyug.Models.ChangePasswordViewModel

@{
    ViewData["Title"] = "Change Password";
    // Layout = "~/Views/Shared/_Adminlayout.cshtml";
    Layout = "~/Views/Shared/_NewAdmin.cshtml";
}
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Change Password</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Change Password</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form class="editprofile" asp-action="ChangePassword" method="post">
                    <div class="card">
                        <div class="card-header">
                            <div class="row align-items-center">
                                <h4 class="card-title col-md-6">Change Password</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="OldPassword">Old Password <span class="star-validation-ddl">*</span></label>
                                <input asp-for="OldPassword" class="form-control" type="password" required maxlength="100" />
                                <span asp-validation-for="OldPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="NewPassword">New Password <span class="star-validation-ddl">*</span></label>
                                <input asp-for="NewPassword" class="form-control" type="password" required maxlength="100" />
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <label asp-for="ConfirmPassword">Confirm Password <span class="star-validation-ddl">*</span></label>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" required maxlength="100" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-end">
                            <button type="submit" class="btn btn-success saverole">
                                <span class="ti-save-alt" style="margin-right:5px;"></span> Save
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
