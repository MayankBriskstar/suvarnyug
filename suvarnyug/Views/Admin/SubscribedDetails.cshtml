@model suvarnyug.Models.Subscription

@{
    ViewData["Title"] = "Subscription Details";
    Layout = "~/Views/Shared/_NewAdmin.cshtml";
}
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Subscription Details</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Subscribed Users</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Subscribed Users List</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header ">
                        <div class="row align-items-center">
                            <h4 class="card-title col-md-6">Subscription Details</h4>
                            <div class="col-md-6 text-end">
                                <a href="@Url.Action("subscribed", "admin")" class="btn text-end backtouser ">
                                    <i class="fas fa-angle-left"></i> Back
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="basic-datatables " class="display table table-striped table-hover table-bordered">
                                <tbody>
                                    <tr>
                                        <td>
                                            Subscription ID -
                                        </td>
                                        <td>
                                            <p>@Model.SubscriptionId</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            User Name -
                                        </td>
                                        <td>
                                            <p>@Model.User.FirstName @Model.User.LastName</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Email -
                                        </td>
                                        <td>
                                            <p>@Model.User.Email</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Mobile No -
                                        </td>
                                        <td>
                                            <p>@Model.User.MobileNo</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Plan Type -
                                        </td>
                                        <td>
                                            <p>@Model.PlanType</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Start Date -
                                        </td>
                                        <td>
                                            <p>@Model.StartDate.ToShortDateString()</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            End Date -
                                        </td>
                                        <td>
                                            <p>@Model.EndDate.ToShortDateString()</p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Payment Status -
                                        </td>
                                        <td>
                                            <p>
                                                @if (Model.PaymentStatus == "Completed")
                                                {
                                                    <span class="text-success">Completed</span>
                                                }
                                                else
                                                {
                                                    <span class="text-danger">Pending</span>
                                                }
                                            </p>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Status -
                                        </td>
                                        <td>
                                            <p>
                                                @if (Model.IsActive)
                                                {
                                                    <span class="text-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="text-danger">Inactive</span>
                                                }
                                            </p>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
